SBT="java -Dfile.encoding=UTF8 -Xmx1536M -Xss1M -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=256m -jar sbt-launch-*.jar"
START="target/start"

CMD=$1
shift

case $CMD in
  compile)
    $SBT add-start-script-tasks start-script;;

  local)
    $START "$@";;

  jar)
    $SBT assembly;;

  cluster)
    hadoop jar target/tacc-hadoop-assembly.jar "$@";;
esac
